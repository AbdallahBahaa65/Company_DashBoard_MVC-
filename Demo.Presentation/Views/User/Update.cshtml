@model ApplicationUser
@{
	ViewData["Title"] = "Update";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 class="my-5 w-75">Update @Model.UserName User </h1>
<form method="post" asp-controller="User" asp-action="Update" class=" row col-12" enctype="multipart/form-data">
	<div asp-validation-summary="ModelOnly"></div>
	<div class="tab-content fa-border-none" id="myTabContent">
		<div class="tab-pane fade show active p-4 border" id="general" role="tabpanel" aria-labelledby="general-tab">
			<div class="row">
				<div class="form-group mb-3 col-12">
					<label class="form-label" asp-for="FirstName"></label>
					<input asp-for="FirstName" class="form-control" />
				</div>
				<div class="form-group mb-3 col-12">
					<label class="form-label" asp-for="LastName"></label>
					<input asp-for="LastName" class="form-control" />
				</div>
				<div class="form-group mb-3 col-12">
					<label class="form-label" asp-for="PhoneNumber"></label>
					<input asp-for="PhoneNumber" class="form-control" />
				</div>
			</div>
		</div>
	</div>
	<div class="mt-4 m-auto">
		<input class="btn btn-warning" type="submit" value="Save" />
		<a asp-action="Index" class="btn ">Back to list</a>
	</div>
</form>


