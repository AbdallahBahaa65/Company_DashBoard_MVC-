@model IdentityRole
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form method="post" asp-controller="Role" asp-action="Delete" class=" row col-12" enctype="multipart/form-data">
	<div asp-validation-summary="ModelOnly"></div>
	<h1 class="my-5 w-75">Are You Sure You Want To Delete @Model.Name </h1>
	<div class="tab-content" id="myTabContent">


		<partial name="_UpdateDeleteDetailsPartialView" />

		<div class="mt-4">
			<input class="btn btn-danger" type="submit" value="Delete" />
			<a asp-action="Index" class="btn btn-outline-dark">Back To list</a>
		</div>
	</div>
</form>