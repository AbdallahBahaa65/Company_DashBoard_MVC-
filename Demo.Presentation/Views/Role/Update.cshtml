@model IdentityRole
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-controller="Role" asp-action="Update" class=" row col-12" enctype="multipart/form-data">
	<div asp-validation-summary="ModelOnly"></div>
	<h1 class="my-5 w-75">Update @Model.Name  </h1>
	<div class="tab-content" id="myTabContent">


		<div class="tab-pane fade show active p-4 border" id="general" role="tabpanel" aria-labelledby="general-tab">

			<div class="row">

				<div class="form-group mb-3 col-12">
					<label class="form-label" asp-for="Id"></label>
					<input asp-for="Id" class="form-control" readonly />
				</div>

				<div class="form-group mb-3 col-12">

					<label class="form-label" asp-for="Name"></label>
					<input asp-for="Name" class="form-control"  />

				</div>
			</div>
		</div>
		<div class="mt-4">
			<input class="btn btn-success" type="submit" value="Save" />
			<a asp-action="Index" class="btn btn-outline-dark">Back To list</a>
		</div>
	</div>
</form>
