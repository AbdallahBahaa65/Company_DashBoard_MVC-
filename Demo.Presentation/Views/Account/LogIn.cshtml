@using Demo.Presentation.ViewModels.AccountViewModel
@model LoginViewModel
@{
    ViewData["Title"] = "LogIn";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
<div class="main-w3layouts wrapper">
	<h1>Creative SignUp Form</h1>
	<div class="main-agileinfo">
		<div class="agileits-top">
			<form asp-action="LogIn" method="post">

				<div asp-validation-summary="ModelOnly"></div>
				<input asp-for="Email" placeholder="Email">
				<span asp-validation-for="Email" class="text-danger"></span>
				<br />
				<input asp-for="Password" placeholder="Password">
				<span asp-validation-for="Password" class="text-danger"></span>
				<br />
				<label class="anim">
					<input asp-for="RememberMe" class="checkbox" required="">
					<span>Remember Me</span>
				</label>
				<div class="clear"> </div>

				<input type="submit" value="Login">
			</form>
			<p>Don't have an Account? <a asp-action="Register">Register Now!</a></p>
			<p> <a asp-action="ForgetPassword">Forget Password!</a></p>

		</div>
	</div>
	<!-- copyright -->


</div>
<!-- //main -->